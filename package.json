{
  "name": "nest-starter",
  "version": "0.0.2",
  "private": true,
  "packageManager": "pnpm@7.29.0",
  "engines": {
    "node": ">18.10.0"
  },
  "homepage": "https://github.com/mrrashidov/nest-api-starter#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrrashidov/nest-api-starter.git"
  },
  "bugs": {
    "url": "https://github.com/mrrashidov/nest-api-starter/issues",
    "email": "mrrashidov@hotmail.com"
  },
  "license": "MIT",
  "author": "Shoxrux Rashidov <mrrashidov@hotmail.com> (https://t.me/mrrashidov)",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm"
  },
  "dependencies": {
    "@nestjs/bull": "10.0.0",
    "@nestjs/cache-manager": "2.0.1",
    "@nestjs/common": "10.0.3",
    "@nestjs/config": "3.0.0",
    "@nestjs/core": "10.0.3",
    "@nestjs/jwt": "10.1.0",
    "@nestjs/mapped-types": "2.0.2",
    "@nestjs/passport": "10.0.0",
    "@nestjs/platform-express": "10.0.3",
    "@nestjs/platform-ws": "10.0.3",
    "@nestjs/schedule": "3.0.1",
    "@nestjs/throttler": "4.1.0",
    "@nestjs/websockets": "10.0.3",
    "bcrypt": "5.1.0",
    "bull": "4.10.4",
    "cache-manager": "5.2.3",
    "cache-manager-redis-store": "3.0.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "compression": "1.7.4",
    "cookie-parser": "1.4.6",
    "helmet": "7.0.0",
    "ioredis": "5.3.2",
    "knex": "2.4.2",
    "nestjs-knex": "2.0.0",
    "nodemailer": "6.9.3",
    "passport": "0.6.0",
    "passport-jwt": "4.0.1",
    "pg": "8.11.1",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.8.1",
    "ws": "8.13.0",
    "zod": "3.21.4"
  },
  "devDependencies": {
    "@commitlint/cli": "17.6.6",
    "@commitlint/config-conventional": "17.6.6",
    "@nestjs/cli": "10.0.5",
    "@nestjs/schematics": "10.0.1",
    "@nestjs/testing": "10.0.3",
    "@types/bcrypt": "5.0.0",
    "@types/cookie-parser": "1.4.3",
    "@types/cron": "2.0.1",
    "@types/express": "4.17.17",
    "@types/jest": "29.5.2",
    "@types/multer": "1.4.7",
    "@types/node": "20.3.2",
    "@types/nodemailer": "6.4.8",
    "@types/passport-jwt": "3.0.8",
    "@types/supertest": "2.0.12",
    "@types/ws": "8.5.5",
    "@typescript-eslint/eslint-plugin": "5.60.1",
    "@typescript-eslint/parser": "5.60.1",
    "dotenv": "16.3.1",
    "eslint": "8.43.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "lint-staged": "13.2.2",
    "prettier": "2.8.8",
    "source-map-support": "0.5.21",
    "supertest": "6.3.3",
    "ts-jest": "29.1.0",
    "ts-loader": "9.4.3",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.0.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "@/(.*)": "<rootDir>/src/$1",
      "~/(.*)": "<rootDir>/types/$1"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,html,css,json}": [
      "yarn prettier --write ."
    ],
    "*.js": "eslint --fix"
  }
}
